<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8D3C1"
    tools:context=".registerfragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F6E4E4"
        android:text="REGISTER"
        android:textSize="40sp"
        android:textColor="#03A9F4"
        android:textStyle="italic"
        android:translationX="110sp"
        android:translationY="50sp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:translationX="50sp"
        android:translationY="120sp"/>
    <EditText
        android:id="@+id/registerfullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter FullName"
        android:inputType="text"
        android:minHeight="48dp"
        android:translationX="50sp"
        android:translationY="158sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg.No"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:translationX="50sp"
        android:translationY="212sp"/>
    <EditText
        android:id="@+id/registerregno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Registration Number"
        android:inputType="text"
        android:minHeight="48dp"
        android:translationX="50sp"
        android:translationY="250sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:translationX="50sp"
        android:translationY="305sp"/>
    <EditText
        android:id="@+id/registerdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="date of birth"
        android:inputType="date"
        android:minHeight="48dp"
        android:translationX="50sp"
        android:translationY="340sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:translationX="50sp"
        android:translationY="395sp"/>
    <EditText
        android:id="@+id/registerphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter phone number"
        android:inputType="datetime"
        android:minHeight="48dp"
        android:translationX="50sp"
        android:translationY="435sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:translationX="50sp"
        android:translationY="500sp"/>
    <EditText
        android:id="@+id/registeremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter e-mail"
        android:inputType="text"
        android:minHeight="48dp"
        android:translationX="50sp"
        android:translationY="525sp"/>
    <Button
        android:id="@+id/registerbutton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="#9C27B0"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:translationY="600sp"
        android:translationX="150sp"/>
</RelativeLayout>